<div class="main-wrapper">
  <!--==============================header=================================-->
  <header>
    <div class="inner-block">
      <h1><%= link_to('Emchik.by', posts_path, class: 'logo') %></h1>
      <div class="inner-block">
        <nav>
          <ul class="sf-menu responsive-menu">
            <li <%= 'class = "current"'.html_safe if @current_tab ==:blog %>><span></span><a href='<%= "#{request.protocol}#{request.host_with_port}" %>'><i class="icon-comment-alt"></i> blog</a>
            </li>
            <li <%= 'class = "current"'.html_safe if @current_tab == :labs %>><span></span><a href= 'labs'><i class="icon-star-empty"></i> labs</a>
            </li>
            <li <%= 'class = "current"'.html_safe if @current_tab == :archive %>><span></span><a href= 'archive'><i class="icon-th"></i> archive</a>
            </li>
            <li><span></span><a href="<%  archive_path %>"><i class="icon-user"></i> About</a></li>
            <% if user_signed_in? %>
                <li>   <span></span>
                  <form method = "post">
                  <%= link_to('Logout', destroy_user_session_path, :method => 'delete')%>
                    </form>
                  <!--<a method = 'delete' href="/logout" rel="nofollow">Logout</a>-->
                </li>
            <% end %>
          </ul>
        </nav>
      </div>
      <div class="clear"></div>
    </div>
    <div class="shadowdrop"></div>
  </header>
  <div class="header-title-blank main-wrapper-shadow"></div>
</div>
