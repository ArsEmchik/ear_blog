<%= simple_form_for @post, url: post_path(@post), method: 'put' do |f| %>

    <%= render partial: 'posts/form', locals: {f: f} %>

    <div class='container'>
      <%= link_to posts_path, class: "btn" do
        raw '<i class="icon-backward"></i> Назад'
      end
      %>
      <%= f.submit 'Сохранить', class: "btn btn-primary dynamic-show-data" %>
    </div>

<% end %>