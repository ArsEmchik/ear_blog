<%= simple_form_for @post, url: post_path(@post), method: 'put' do |f| %>

    <%= render partial: 'posts/form', locals: {f: f} %>

    <%= f.submit 'Update', class: 'button1' %>

    <hr>

    <h2><%= link_to post_path, class: "btn" do
      raw '<i class="icon-backward"></i>Back'
    end
    %></h2>


<% end %>

