<article class="post-holder">
  <div>

    <h2 class="entry-title fleft"><%= @post.title %></h2>

    <div class="post-meta">
      <div class="fleft"><i class="icon-user"></i><a href="#">автор: <%= @post.author %> </a> /
        <a><%= Russian.strftime(@post.created_at, '%A') %>,
          <%= Russian.strftime(@post.created_at, '%d %B %Y') %> </a></div>
    </div>
    <!--.post-meta-->
  </div>
  <p class="ident-bot-2"><%= raw @post.brief_text %></p>
  <p class="ident-bot-2"><%= raw @post.text %></p>

</article>
